import { Palette } from "std-widgets.slint";
export component LyricLine inherits Window {
    height: 30px;
    in-out property <string> content;
    in-out property <bool> playing;
    callback triggered();
    Text {
        width: 100%;
        horizontal-alignment: center;
        vertical-alignment: center;
        color: playing ? Palette.selection-background : Palette.foreground;
        text: content;
        font-size: playing ? 15px : 13px;
        font-weight: playing ? 800 : 0;
        overflow: TextOverflow.elide;
    }

    background: transparent;
}
